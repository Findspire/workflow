- extends "base.haml"

- load i18n
- load static

- block breadcrumbs_app
  {% trans "Home" %}

- block content
  .container-fluid
    .row
      %a.col-md-offset-5{:href => "{% url 'workflow:project_list' %}"}
        %button.btn.btn-success.btn-lg
          {% trans 'See project list' %}
    .jumbotron
      - for post in posts
        .panel.panel-primary
          .panel-heading
            %h3.panel-title
              %i.fa.fa-smile-o 
              {{ post.title }}
              %small
                {{ post.created_at }}
          .panel-body
            .row
              %article
                .col-md-6.col-md-offset-1
                  %header
                    %h4
                      CHANGELOG
                      %hr{:style => "margin-bottom: 0"}/
                  %section
                    {{ post.text|linebreaksbr }}