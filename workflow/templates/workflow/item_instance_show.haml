- extends "workflow/base.haml"

- load static
- load admin_urls
- load i18n
- load workflow_tags

- block breadcrumbs
    %a{href: "{% url 'workflow:workflow_show' item.workflow.pk 'all' %}"}
        {{ item.workflow.project.name }} - {{ item.workflow.version }}
    â€º
    {% trans "Show item" %}

- block content
    %h1
        {{ item.item_model.name }} ({{ item.item_model.category.name }})
        %small{style: "color:gray;"}
            {{ item.workflow.project.name }} - {{ item.workflow.version }}

    %div
        %span.take_untake_item
            - if item.assigned_to
                {{ item.assigned_to }}
                %a{href: "{% url 'workflow:update' which_display 'untake' 'item' item.pk %}?next={{ request.path }}", title: "Reset owner of item"}
                    %img{src: "/static/workflow/img/untake.png"}
            - else
                %a{href: "{% url 'workflow:update' which_display 'take' 'item' item.pk %}?next={{ request.path }}", title: "Take item"}
                    {% trans "Take" %}
        \-
        %span.validate
            - if item.validation == Item.VALIDATION_SUCCESS
                %span{title: "Item is validated"}
                    %img{src: "/static/workflow/img/validation_OK.png"}
            - else
                %a{href: "{% url 'workflow:update' which_display 'success' 'validate' item.pk %}?next={{ request.path }}", title: "Click to validate"}
                    %img{src: "/static/workflow/img/validation_OK_disabled.png"}

            - if item.validation == Item.VALIDATION_UNTESTED
                %span{title: "Item is untested"}
                    ?
            - else
                %a{href: "{% url 'workflow:update' which_display 'untested' 'validate' item.pk %}?next={{ request.path }}", title: "Reset item validation"}
                    ?

            - if item.validation == Item.VALIDATION_FAILED
                %span{title: "Item is broken"}
                    %img{src: "/static/workflow/img/validation_KO.png"}
            - else
                %a{href: "{% url 'workflow:update' which_display 'failed' 'validate' item.pk %}?next={{ request.path }}", title: "Click to mark as broken"}
                    %img{src: "/static/workflow/img/validation_KO_disabled.png"}

    %hr{style: "background-color: gray"}

    #details_see
        %h2
            Details (<a href="." onClick="details_edit(); return false;">Edit</a>)

        - if item.item_model.description
            %pre<
                {{ item.item_model.description }}
        - else
            %pre<
                ** {% trans "No details." %} **

    #details_edit
        %h2
            Edit details

        %form{action: ".",  method: "POST"}
            - csrf_token
            %input{type: "hidden", name: "type", value:"description"}
            {{ form_description.as_p | u }}
            %input{type: "submit", value:"Post"}
            %input{type: "submit", value:"Cancel", onClick:"details_see(); return false;"}

    %hr

    #comments
        %h2
            {% trans "Comments" %}
        - for comment in comments
            .comment
                %h4
                    %a{href: "#{{ forloop.counter }}", name: "{{ forloop.counter }}", title: "Comment anchor - {{ forloop.counter }}"}
                        \#{{ forloop.counter }}
                    \- {{ comment.date }} - {{ comment.person }}
                    %a{:href => "{% url 'workflow:delete_comment_view' comment.item.workflow.pk comment.pk %}"}
                        %img{:src => "{% static 'workflow/img/untake.png' %}", :alt => ""}/
                %p
                    {{ comment }}
                %hr
        - empty
            %em
                {% trans "No comments yet." %}

    #comment_new
        %h2
            {% trans "Add a comment" %}
        %form{action: '.', method:"POST"}
            - csrf_token
            %input{type: "hidden", name: "type", value:"comment"}
            {{ form_comment.as_p | u }}
            %input{type: "submit", value:"Post"}


    %script{type: "text/javascript"}
        $('#details_edit').hide();

        function details_edit() {
            $('#details_see').hide();
            $('#details_edit').show();
        }

        function details_see() {
            $('#details_see').show();
            $('#details_edit').hide();
        }

