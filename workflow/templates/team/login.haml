- extends "base.haml"
- load i18n

- block breadcrumbs
  - if not creating
    %a{href: "{% url 'team:login' %}"}
      {% trans "Login" %}
  - else
    {% trans "Login" %}

- block content
  .row
    .col-md-4.col-md-offset-4
      %h2
        Login
      %form{:action => "/team/login/", :method => "post"}
        - csrf_token
        .form-group
          %label{:for => "username"}
            {% trans 'Username' %}
          %input.form-control{:type => "text", :name => "username", :required => "true"}/
        .form-group
          %label{:for => "password"}
            {% trans 'Password' %}
          %input.form-control{:type => "password", :name => "password", :required => "true"}/
        %button.btn.btn-success{:type => "submit"}
          {% trans 'Connection' %}
  .row
    .col-md-4.col-md-offset-4
      .messages
        - if messages
          - for message in messages
            %li{:class => "alert alert-{{ message.tags }}"}
              {{ message }}
        
